/* 用于定义一些全局的样式的变量 */
$base-color = #872330;
$base-fontsize = 12px;
// 浅色字体undertint
$base-undertint-font-color = #4a4a4a;

.page{
    .page-header{
        position:fixed;
        top:0px;
        width:100vw;
        z-index:100
    }
    .main-content{
        background:#ececec;
        padding-top:40px;
        padding-bottom:50px;
        box-sizing border-box
        min-height 100vh
    }
    .footer{
        width:100vw;
        position fixed;
        height:50px;
        bottom:0px;
        text-align left;
        box-sizing border-box
        padding-left:1rem;
        background:#fff;
    }
}